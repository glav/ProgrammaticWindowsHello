<Page
    x:Class="HelloWindows.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloWindows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="180" />
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"  />
        </Grid.ColumnDefinitions>
        <Button Content="Test" Name="btnTest" Grid.Column="0"  Click="btnTest_Click" FontSize="20" Margin="50,10,50,10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <TextBlock Grid.Row="1" Text="Local Principal: -none-" FontSize="20" Margin="5" Name="txtLocalP" />
        <TextBlock Grid.Row="2" Text="Local Data Identity UserId: -none-" FontSize="20" Margin="5" Name="txtAppData" />
    </Grid>

</Page> 
